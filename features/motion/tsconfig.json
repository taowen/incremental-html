{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "declaration": true,
        "moduleResolution": "node",
        "incremental": true,
        "strict": true,
        "noImplicitThis": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictPropertyInitialization": false,
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}