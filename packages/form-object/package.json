{
  "name": "@incremental-html/form-object",
  "version": "1.0.0",
  "description": "read form submitted from client and send back validation error",
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "types": "dist/esm/src/index.d.ts",
  "devDependencies": {
    "@types/jest": "27.4.1",
    "jest": "27.5.1",
    "npm-run-all": "^4.1.5",
    "typedoc": "^0.22.15",
    "typescript": "^4.5.5"
  },
  "files": [
    "dist/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:lib": "tsc --watch",
    "build:esm": "tsc --watch --module esnext --outDir dist/esm",
    "dist": "tsc && tsc --module esnext --outDir dist/esm",
    "build:docs": "typedoc src/index.ts --out ../../docs/form-object"
  }
}
