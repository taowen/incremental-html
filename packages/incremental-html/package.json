{
    "name": "incremental-html",
    "version": "1.0.0",
    "description": "update ui incrementally with html",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "index.d.ts",
    "dependencies": {
      "@vue/reactivity": "^3.2.32",
      "csstype": "^2.6.8"
    },
    "devDependencies": {
      "typescript": "^4.5.5",
      "npm-run-all": "^4.1.5",
      "jest": "27.5.1",
      "@types/jest": "27.4.1"
    },
    "files": ["dist/*", "jsx.d.ts", "pages.d.ts", "README.md", "LICENSE"],
    "scripts": {
      "build": "npm-run-all -p build:*",
      "build:lib": "tsc --watch",
      "build:esm": "tsc --watch --module esnext --outDir dist/esm",
      "dist": "tsc && tsc --module esnext --outDir dist/esm && cp ../../README.md dist && cp ../../LICENSE dist"
    }
  }