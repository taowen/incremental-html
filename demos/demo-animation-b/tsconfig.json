{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "declaration": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "incremental": true,
        "strict": true,
        "noImplicitThis": true,
        "jsx": "react",
        "skipLibCheck": true,
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "types": ["react", "react-dom"],
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}